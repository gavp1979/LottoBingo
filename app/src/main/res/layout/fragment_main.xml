<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment">

    <TextView
        android:id="@+id/section_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Latest Numbers:"
        android:id="@+id/lblLatestNumberCaption"
        android:layout_below="@+id/section_label"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="64dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/lblLatestNumbersData"
        android:text="Latest Numbers Data"
        android:layout_below="@+id/lblLatestNumberCaption"
        android:layout_toRightOf="@+id/section_label"
        android:layout_toEndOf="@+id/section_label"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="My Numbers:"
        android:id="@+id/lblMyNumbersCaption"
        android:layout_toEndOf="@+id/section_label"
        android:layout_alignTop="@+id/section_label"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="My Numbers Data"
        android:id="@+id/lblMyNumbersData"
        android:layout_toEndOf="@+id/section_label"
        android:layout_below="@+id/lblMyNumbersCaption"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lstGameCard"
        android:layout_below="@+id/lblLatestNumbersData"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
